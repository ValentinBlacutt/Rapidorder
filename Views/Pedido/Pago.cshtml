@model Restaurante.Models.Pedido
@{
    ViewData["Title"] = "Pagar Pedido";
}

<style>
    .pago-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .pago-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideUp 0.5s ease;
    }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .pago-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 30px;
        text-align: center;
    }

        .pago-header i.fa-3x {
            margin-bottom: 15px;
        }

        .pago-header h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

    .numero-pedido {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        padding: 10px 25px;
        display: inline-block;
        margin-top: 15px;
        font-size: 1.1rem;
        font-weight: 600;
    }

        .numero-pedido i {
            margin-right: 5px;
        }

    .pago-body {
        padding: 40px 30px;
    }

    .info-section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
    }

        .info-section h4 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
            font-size: 1.2rem;
        }

            .info-section h4 i {
                margin-right: 8px;
            }

    .info-item {
        display: flex;
        margin-bottom: 15px;
        align-items: flex-start;
    }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-item i {
            color: #667eea;
            margin-right: 12px;
            margin-top: 3px;
            font-size: 1.1rem;
            flex-shrink: 0;
        }

        .info-item strong {
            color: #2c3e50;
            min-width: 120px;
            flex-shrink: 0;
        }

        .info-item span {
            color: #7f8c8d;
            flex: 1;
            word-break: break-word;
        }

    .items-list {
        margin-top: 20px;
    }

    .item-pedido {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 15px;
        border-bottom: 1px solid #e0e0e0;
        transition: background 0.2s ease;
        gap: 15px;
    }

        .item-pedido:hover {
            background: #f8f9fa;
        }

        .item-pedido:last-child {
            border-bottom: none;
        }

    .item-info {
        flex: 1;
    }

    .item-nombre {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
        font-size: 1rem;
    }

    .item-descripcion {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-top: 3px;
    }

        .item-descripcion i {
            margin-right: 5px;
        }

    .item-precio {
        text-align: right;
        min-width: 120px;
        flex-shrink: 0;
    }

    .item-cantidad {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .item-subtotal {
        font-weight: 600;
        color: #27ae60;
        font-size: 1.1rem;
    }

    .totales-box {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 25px;
        color: white;
        margin: 30px 0;
    }

    .total-linea {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;
        font-size: 1.1rem;
    }

    .total-final {
        border-top: 2px solid rgba(255, 255, 255, 0.3);
        padding-top: 15px;
        margin-top: 15px;
        font-size: 1.5rem;
        font-weight: 700;
        display: flex;
        justify-content: space-between;
    }

    /* ESTILOS PARA MÉTODO DE PAGO */
    .metodo-pago {
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
        border-left: 5px solid;
        display: flex;
        align-items: flex-start;
        gap: 15px;
    }

        .metodo-pago.online {
            background: #e3f2fd;
            border-color: #2196f3;
        }

        .metodo-pago.mostrador {
            background: #fff3cd;
            border-color: #ffc107;
        }

        .metodo-pago i {
            font-size: 1.5rem;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .metodo-pago.online i {
            color: #2196f3;
        }

        .metodo-pago.mostrador i {
            color: #ffc107;
        }

    .metodo-pago-content {
        flex: 1;
    }

        .metodo-pago-content strong {
            font-size: 1.1rem;
            display: block;
            margin-bottom: 8px;
            color: #2c3e50;
        }

        .metodo-pago-content p {
            margin: 0;
            color: #666;
            line-height: 1.5;
        }

    /* FORMULARIO DE PAGO ONLINE */
    .pago-online-form {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 30px;
    }

        .pago-online-form h5 {
            color: #2c3e50;
            margin-bottom: 20px;
            font-weight: 600;
            font-size: 1.1rem;
        }

            .pago-online-form h5 i {
                margin-right: 8px;
                color: #27ae60;
            }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #2c3e50;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

            .form-group input:focus {
                outline: none;
                border-color: #667eea;
            }

    .card-icons {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        flex-wrap: wrap;
    }

        .card-icons i {
            font-size: 2rem;
            color: #ccc;
        }

        .card-icons .fa-cc-visa {
            color: #1a1f71;
        }

        .card-icons .fa-cc-mastercard {
            color: #eb001b;
        }

        .card-icons .fa-cc-amex {
            color: #006fcf;
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .btn-pagar {
        width: 100%;
        padding: 18px;
        font-size: 1.2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #27ae60 0%, #219a52 100%);
        border: none;
        border-radius: 12px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
        cursor: pointer;
    }

        .btn-pagar:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(39, 174, 96, 0.4);
        }

        .btn-pagar:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .btn-pagar i {
            margin-right: 10px;
        }

    .btn-cancelar {
        width: 100%;
        padding: 15px;
        font-size: 1rem;
        font-weight: 500;
        background: white;
        border: 2px solid #e74c3c;
        border-radius: 10px;
        color: #e74c3c;
        margin-top: 15px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        cursor: pointer;
    }

        .btn-cancelar:hover {
            background: #e74c3c;
            color: white;
            text-decoration: none;
        }

        .btn-cancelar i {
            margin-right: 8px;
        }

    .alert-info-mostrador {
        background: #e8f4f8;
        border-left: 4px solid #2196f3;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

        .alert-info-mostrador i {
            color: #2196f3;
            font-size: 1.3rem;
            flex-shrink: 0;
        }

        .alert-info-mostrador strong {
            display: block;
            margin-bottom: 5px;
            color: #2c3e50;
        }

    /* ============================================
           RESPONSIVE - TABLETS
           ============================================ */
    @@media (max-width: 991px) {
        .pago-container

    {
        margin: 40px auto;
    }

    .pago-body {
        padding: 35px 25px;
    }

    }

    /* ============================================
           RESPONSIVE - MÓVILES
           ============================================ */
    @@media (max-width: 768px) {
        .pago-container

    {
        margin: 20px auto;
        padding: 0 15px;
    }

    .pago-card {
        border-radius: 12px;
    }

    .pago-header {
        padding: 30px 20px;
    }

        .pago-header i.fa-3x {
            font-size: 2.5rem;
            margin-bottom: 12px;
        }

        .pago-header h2 {
            font-size: 1.5rem;
        }

    .numero-pedido {
        font-size: 1rem;
        padding: 8px 20px;
    }

    .pago-body {
        padding: 25px 20px;
    }

    .info-section {
        padding: 20px 15px;
        margin-bottom: 20px;
        border-radius: 10px;
    }

        .info-section h4 {
            font-size: 1.1rem;
            margin-bottom: 15px;
            padding-bottom: 8px;
        }

    .info-item {
        flex-direction: column;
        margin-bottom: 12px;
        gap: 5px;
    }

