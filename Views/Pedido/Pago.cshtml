<div class="pago-container">
    <div class="pago-card">
        <div class="pago-header">
            <i class="fas fa-credit-card fa-3x"></i>
            <h2>Confirmar Pago</h2>
            <div class="numero-pedido">
                <i class="fas fa-hashtag"></i>
                Pedido: @Model.NumeroPedido
            </div>
        </div>

        <div class="pago-body">
            <div class="info-section">
                <h4>
                    <i class="fas fa-user"></i>
                    Información del Pedido
                </h4>
                <div class="info-item">
                    <i class="fas fa-user-circle"></i>
                    <strong>Cliente:</strong>
                    <span>@Model.ClienteNombre</span>
                </div>

                <div class="info-item">
                    <i class="fas fa-utensils"></i>
                    <strong>Tipo de Pedido:</strong>
                    <span>@(Model.TipoPedido == TipoPedido.ParaComerAqui ? "Para Comer Aquí" : "Para Llevar")</span>
                </div>

                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <strong>Fecha:</strong>
                    <span>@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notas))
                {
                    <div class="info-item">
                        <i class="fas fa-sticky-note"></i>
                        <strong>Notas:</strong>
                        <span>@Model.Notas</span>
                    </div>
                }
            </div>

            <div class="info-section">
                <h4>
                    <i class="fas fa-shopping-bag"></i>
                    Detalle del Pedido
                </h4>
                <div class="items-list">
                    @foreach (var item in Model.Items)
                    {
                        <div class="item-pedido">
                            <div class="item-info">
                                <div class="item-nombre">@item.NombreProducto</div>
                                @if (!string.IsNullOrEmpty(item.Descripcion))
                                {
                                    <div class="item-descripcion">@item.Descripcion</div>
                                }
                                @if (!string.IsNullOrEmpty(item.Notas))
                                {
                                    <div class="item-descripcion">
                                        <i class="fas fa-info-circle"></i> @item.Notas
                                    </div>
                                }
                            </div>
                            <div class="item-precio">
                                <div class="item-cantidad">x@item.Cantidad - S/. @item.PrecioUnitario.ToString("0.00")</div>
                                <div class="item-subtotal">S/. @item.Subtotal.ToString("0.00")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="totales-box">
                <div class="total-linea">
                    <span>Subtotal:</span>
                    <span>S/. @Model.Subtotal.ToString("0.00")</span>
                </div>
                <div class="total-linea">
                    <span>Impuestos (18%):</span>
                    <span>S/. @Model.Impuestos.ToString("0.00")</span>
                </div>
                <div class="total-final">
                    <span>Total a Pagar:</span>
                    <span>S/. @Model.Total.ToString("0.00")</span>
                </div>
            </div>

            @* MOSTRAR FORMULARIO SEGÚN MÉTODO DE PAGO *@
            @if (Model.MetodoPago == MetodoPago.PagoOnline)
            {
                <!-- PAGO ONLINE (FICTICIO) -->
                <div class="metodo-pago online">
                    <i class="fas fa-credit-card"></i>
                    <div class="metodo-pago-content">
                        <strong>Pago con Tarjeta</strong>
                        <p>Ingresa los datos de tu tarjeta para completar el pago</p>
                    </div>
                </div>

                <div class="pago-online-form">
                    <h5><i class="fas fa-lock"></i> Datos de la Tarjeta</h5>

                    <form asp-action="ConfirmarPago" method="post" id="form-pago-online">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group">
                            <label for="numero-tarjeta">Número de Tarjeta</label>
                            <input type="text" id="numero-tarjeta" placeholder="1234 5678 9012 3456"
                                   maxlength="19" required pattern="\d{4} \d{4} \d{4} \d{4}">
                            <div class="card-icons">
                                <i class="fab fa-cc-visa"></i>
                                <i class="fab fa-cc-mastercard"></i>
                                <i class="fab fa-cc-amex"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="nombre-tarjeta">Nombre del Titular</label>
                            <input type="text" id="nombre-tarjeta" placeholder="JUAN PEREZ" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="fecha-venc">Fecha de Vencimiento</label>
                                <input type="text" id="fecha-venc" placeholder="MM/AA"
                                       maxlength="5" required pattern="\d{2}/\d{2}">
                            </div>
                            <div class="form-group">
                                <label for="cvv">CVV</label>
                                <input type="text" id="cvv" placeholder="123"
                                       maxlength="3" required pattern="\d{3}">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-pagar" id="btn-pagar-online">
                            <i class="fas fa-lock"></i>
                            Pagar S/. @Model.Total.ToString("0.00")
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- PAGO EN MOSTRADOR -->
                <div class="metodo-pago mostrador">
                    <i class="fas fa-cash-register"></i>
                    <div class="metodo-pago-content">
                        <strong>Pago en Mostrador</strong>
                        <p>Pagarás en efectivo o tarjeta cuando recojas tu pedido</p>
                    </div>
                </div>

                <div class="alert-info-mostrador">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>Importante:</strong> Tu pedido será preparado una vez que realices el pago en nuestro mostrador.
                        Por favor dirígete a nuestro local con tu número de pedido.
                    </div>
                </div>

                <form asp-action="ConfirmarPago" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-pagar">
                        <i class="fas fa-check-circle"></i>
                        Confirmar Pedido
                    </button>
                </form>
            }

            <a href="@Url.Action("Index", "Home")" class="btn btn-cancelar">
                <i class="fas fa-times"></i>
                Cancelar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ✅ FORMATO AUTOMÁTICO DE NÚMERO DE TARJETA
        const numeroTarjeta = document.getElementById('numero-tarjeta');
        if (numeroTarjeta) {
            numeroTarjeta.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\s/g, '');
                let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                e.target.value = formattedValue;
            });
        }

        // ✅ FORMATO AUTOMÁTICO DE FECHA
        const fechaVenc = document.getElementById('fecha-venc');
        if (fechaVenc) {
            fechaVenc.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
