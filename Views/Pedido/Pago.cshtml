            display: none;
        }

        .info-item strong {
            margin-bottom: 3px;
            font-size: 0.9rem;
            min-width: auto;
        }

        .info-item span {
            font-size: 0.95rem;
            padding-left: 0;
        }

    .item-pedido {
        flex-direction: column;
        padding: 12px;
        gap: 10px;
    }

    .item-nombre {
        font-size: 0.95rem;
    }

    .item-descripcion {
        font-size: 0.85rem;
    }

    .item-precio {
        margin-top: 8px;
        text-align: left;
        min-width: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .item-cantidad {
        font-size: 0.85rem;
        margin-bottom: 0;
    }

    .item-subtotal {
        font-size: 1rem;
    }

    .totales-box {
        padding: 20px 15px;
        margin: 20px 0;
        border-radius: 10px;
    }

    .total-linea {
        font-size: 1rem;
        margin-bottom: 10px;
    }

    .total-final {
        font-size: 1.3rem;
        padding-top: 12px;
        margin-top: 12px;
    }

    .metodo-pago {
        padding: 18px 15px;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

        .metodo-pago i {
            font-size: 1.3rem;
        }

    .metodo-pago-content strong {
        font-size: 1rem;
    }

    .metodo-pago-content p {
        font-size: 0.9rem;
    }

    .pago-online-form {
        padding: 20px 15px;
        margin-bottom: 20px;
        border-radius: 10px;
    }

        .pago-online-form h5 {
            font-size: 1rem;
            margin-bottom: 15px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 0.9rem;
            margin-bottom: 6px;
        }

        .form-group input {
            padding: 10px 12px;
            font-size: 16px; /* Prevenir zoom en iOS */
        }

    .form-row {
        grid-template-columns: 1fr;
        gap: 0;
    }

    .card-icons {
        gap: 8px;
    }

        .card-icons i {
            font-size: 1.8rem;
        }

    .btn-pagar {
        padding: 16px;
        font-size: 1.1rem;
    }

    .btn-cancelar {
        padding: 13px;
        font-size: 0.95rem;
    }

    .alert-info-mostrador {
        padding: 15px;
        flex-direction: column;
        gap: 8px;
    }

        .alert-info-mostrador i {
            font-size: 1.2rem;
        }

        .alert-info-mostrador strong {
            font-size: 0.95rem;
        }

    }

    /* ============================================
           MÓVILES PEQUEÑOS
           ============================================ */
    @@media (max-width: 480px) {
        .pago-container

    {
        margin: 15px auto;
        padding: 0 10px;
    }

    .pago-header {
        padding: 25px 15px;
    }

        .pago-header i.fa-3x {
            font-size: 2rem;
        }

        .pago-header h2 {
            font-size: 1.3rem;
        }

    .numero-pedido {
        font-size: 0.95rem;
        padding: 8px 18px;
    }

    .pago-body {
        padding: 20px 15px;
    }

    .info-section {
        padding: 15px 12px;
    }

        .info-section h4 {
            font-size: 1rem;
        }

    .info-item strong {
