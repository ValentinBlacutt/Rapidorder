        padding: 10px;
    }

    .item-nombre {
        font-size: 0.9rem;
    }

    .item-descripcion {
        font-size: 0.8rem;
    }

    .item-subtotal {
        font-size: 0.95rem;
    }

    .totales-box {
        padding: 18px 12px;
    }

    .total-linea {
        font-size: 0.95rem;
    }

    .total-final {
        font-size: 1.2rem;
    }

    .metodo-pago {
        padding: 15px 12px;
    }

        .metodo-pago i {
            font-size: 1.2rem;
        }

    .metodo-pago-content strong {
        font-size: 0.95rem;
    }

    .metodo-pago-content p {
        font-size: 0.85rem;
    }

    .pago-online-form {
        padding: 15px 12px;
    }

        .pago-online-form h5 {
            font-size: 0.95rem;
        }

    .form-group input {
        padding: 10px;
    }

    .btn-pagar {
        padding: 14px;
        font-size: 1rem;
    }

