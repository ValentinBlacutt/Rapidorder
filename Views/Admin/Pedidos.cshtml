@model List<Pedido>
@{
    ViewData["Title"] = "Gestión de Pedidos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var estadoActual = ViewData["EstadoActual"]?.ToString();
    var buscar = ViewData["Buscar"]?.ToString();
}
<link rel="stylesheet" href="~/css/PedidosAdmin.css" />

<div class="d-flex justify-content-between align-items-center mb-3 mb-md-4">
    <h2 class="h4 h-md-2 mb-0">
        <i class="fas fa-clipboard-list me-2"></i>
        <span class="d-none d-md-inline">@ViewData["Title"]</span>
        <span class="d-inline d-md-none">Pedidos</span>
    </h2>
    <div class="btn-group">
        <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm btn-md-normal">
            <i class="fas fa-arrow-left me-1"></i>
            <span class="d-none d-sm-inline">Volver</span>
        </a>
    </div>
</div>

<!-- Búsqueda y Filtros -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-2 p-md-3">
        <form method="get" action="/admin/pedidos" class="row g-2 g-md-3">
            <div class="col-12 col-md-8">
                <div class="input-group input-group-sm input-group-md-normal">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text"
                           name="buscar"
                           class="form-control"
                           placeholder="Buscar pedido o cliente..."
                           value="@buscar">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search d-md-none"></i>
                        <span class="d-none d-md-inline"><i class="fas fa-search me-1"></i>Buscar</span>
                    </button>
                    @if (!string.IsNullOrEmpty(buscar) || !string.IsNullOrEmpty(estadoActual))
                    {
                        <a href="/admin/pedidos" class="btn btn-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </div>
            </div>
            <div class="col-12 col-md-4">
                <select name="estado" class="form-select form-select-sm form-select-md-normal" onchange="this.form.submit()">
                    <option value="">Todos los estados</option>
                    <option value="Pendiente" selected="@(estadoActual == "Pendiente")">Pendiente</option>
                    <option value="Confirmado" selected="@(estadoActual == "Confirmado")">Confirmado</option>
                    <option value="EnPreparacion" selected="@(estadoActual == "EnPreparacion")">En Preparación</option>
                    <option value="Listo" selected="@(estadoActual == "Listo")">Listo</option>
                    <option value="Entregado" selected="@(estadoActual == "Entregado")">Entregado</option>
                    <option value="Cancelado" selected="@(estadoActual == "Cancelado")">Cancelado</option>
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Filtros rápidos por estado -->
<div class="card mb-3 mb-md-4">
    <div class="card-body p-2 p-md-3">
        <!-- Vista desktop -->
        <div class="btn-group w-100 d-none d-lg-flex" role="group">
            <a href="/admin/pedidos"
               class="btn btn-sm @(string.IsNullOrEmpty(estadoActual) ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-list me-1"></i>Todos
            </a>
            <a href="/admin/pedidos?estado=Pendiente"
               class="btn btn-sm @(estadoActual == "Pendiente" ? "btn-warning" : "btn-outline-warning")">
                <i class="fas fa-clock me-1"></i>Pendientes
            </a>
            <a href="/admin/pedidos?estado=Confirmado"
               class="btn btn-sm @(estadoActual == "Confirmado" ? "btn-info" : "btn-outline-info")">
                <i class="fas fa-check-circle me-1"></i>Confirmados
            </a>
            <a href="/admin/pedidos?estado=EnPreparacion"
               class="btn btn-sm @(estadoActual == "EnPreparacion" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-utensils me-1"></i>En Preparación
            </a>
            <a href="/admin/pedidos?estado=Listo"
               class="btn btn-sm @(estadoActual == "Listo" ? "btn-success" : "btn-outline-success")">
                <i class="fas fa-check-double me-1"></i>Listos
            </a>
            <a href="/admin/pedidos?estado=Entregado"
               class="btn btn-sm @(estadoActual == "Entregado" ? "btn-secondary" : "btn-outline-secondary")">
                <i class="fas fa-box-check me-1"></i>Entregados
            </a>
        </div>

        <!-- Vista móvil/tablet -->
        <div class="d-lg-none">
            <div class="row g-2">
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos"
                       class="btn btn-sm w-100 @(string.IsNullOrEmpty(estadoActual) ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-list d-block mb-1"></i>
                        <small>Todos</small>
                    </a>
                </div>
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos?estado=Pendiente"
                       class="btn btn-sm w-100 @(estadoActual == "Pendiente" ? "btn-warning" : "btn-outline-warning")">
                        <i class="fas fa-clock d-block mb-1"></i>
                        <small>Pendientes</small>
                    </a>
                </div>
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos?estado=Confirmado"
                       class="btn btn-sm w-100 @(estadoActual == "Confirmado" ? "btn-info" : "btn-outline-info")">
                        <i class="fas fa-check-circle d-block mb-1"></i>
                        <small>Confirmados</small>
                    </a>
                </div>
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos?estado=EnPreparacion"
                       class="btn btn-sm w-100 @(estadoActual == "EnPreparacion" ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-utensils d-block mb-1"></i>
                        <small>En Preparación</small>
                    </a>
                </div>
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos?estado=Listo"
                       class="btn btn-sm w-100 @(estadoActual == "Listo" ? "btn-success" : "btn-outline-success")">
                        <i class="fas fa-check-double d-block mb-1"></i>
                        <small>Listos</small>
                    </a>
                </div>
                <div class="col-6 col-sm-4">
                    <a href="/admin/pedidos?estado=Entregado"
                       class="btn btn-sm w-100 @(estadoActual == "Entregado" ? "btn-secondary" : "btn-outline-secondary")">
                        <i class="fas fa-box-check d-block mb-1"></i>
                        <small>Entregados</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body p-2 p-md-3">
        @if (Model.Any())
        {
            <!-- Vista de tabla para desktop -->
            <div class="table-responsive d-none d-xl-block">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th># Pedido</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Pago</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">#@pedido.NumeroPedido</strong>
                                </td>
                                <td>@pedido.ClienteNombre</td>
                                <td>
                                    <small>@pedido.FechaPedido.ToString("dd/MM/yyyy")</small><br>
                                    <small class="text-muted">@pedido.FechaPedido.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (pedido.TipoPedido == TipoPedido.ParaComerAqui)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-store"></i> Aquí
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-shopping-bag"></i> Llevar
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (pedido.EstadoPago == EstadoPago.Pagado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Pagado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock"></i> Pendiente
                                        </span>
                                    }
                                    <br>
                                    <small class="text-muted">
                                        @(pedido.MetodoPago == MetodoPago.PagoOnline ? "Online" : "Mostrador")
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@pedido.Items.Count items</span>
                                </td>
                                <td>
                                    <strong>S/. @pedido.Total.ToString("0.00")</strong>
                                </td>
                                <td>
                                    @switch (pedido.Estado)
                                    {
                                        case EstadoPedido.Pendiente:
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                            break;
                                        case EstadoPedido.Confirmado:
                                            <span class="badge bg-info">
                                                <i class="fas fa-check-circle"></i> Confirmado
                                            </span>
                                            break;
                                        case EstadoPedido.EnPreparacion:
                                            <span class="badge bg-primary">
                                                <i class="fas fa-utensils"></i> En Preparación
                                            </span>
                                            break;
                                        case EstadoPedido.Listo:
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-double"></i> Listo
                                            </span>
                                            break;
                                        case EstadoPedido.Entregado:
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-box-check"></i> Entregado
                                            </span>
                                            break;
                                        case EstadoPedido.Cancelado:
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Cancelado
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/admin/detalle-pedido/@pedido.Id"
                                           class="btn btn-outline-primary"
                                           title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (pedido.MetodoPago == MetodoPago.PagoEnMostrador &&
                                                                        pedido.EstadoPago == EstadoPago.Pendiente)
                                        {
                                            <form method="post" action="/admin/pedidos/marcar-pagado/@pedido.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-success"
                                                        title="Marcar como Pagado">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </button>
                                            </form>
                                        }

                                        @if ((pedido.Estado == EstadoPedido.Pendiente || pedido.Estado == EstadoPedido.Confirmado) &&
                                                                        pedido.EstadoPago == EstadoPago.Pagado)
                                        {
                                            <form method="post" action="/admin/pedidos/en-preparacion/@pedido.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-info"
                                                        title="Iniciar Preparación">
                                                    <i class="fas fa-fire"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (pedido.Estado == EstadoPedido.EnPreparacion)
                                        {
                                            <form method="post" action="/admin/pedidos/listo/@pedido.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-success"
                                                        title="Marcar como Listo">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (pedido.Estado == EstadoPedido.Listo)
                                        {
                                            <form method="post" action="/admin/pedidos/entregado/@pedido.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-secondary"
                                                        title="Marcar como Entregado">
                                                    <i class="fas fa-box-check"></i>
                                                </button>
                                            </form>
                                        }

                                        @if (pedido.Estado != EstadoPedido.Entregado && pedido.Estado != EstadoPedido.Cancelado)
                                        {
                                            <form method="post" action="/admin/pedidos/cancelar/@pedido.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-outline-danger"
                                                        title="Cancelar pedido"
                                                        onclick="return confirm('¿Estás seguro de cancelar este pedido?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Vista de cards para móvil/tablet -->
            <div class="d-xl-none">
                @foreach (var pedido in Model)
                {
                    <div class="card mb-3 shadow-sm border-start border-4 @(pedido.Estado == EstadoPedido.Pendiente ? "border-warning" :
                                                                 pedido.Estado == EstadoPedido.Confirmado ? "border-info" :
                                                                 pedido.Estado == EstadoPedido.EnPreparacion ? "border-primary" :
                                                                 pedido.Estado == EstadoPedido.Listo ? "border-success" :
                                                                 pedido.Estado == EstadoPedido.Entregado ? "border-secondary" : "border-danger")">
                <div class="card-body p-3">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1">
                                <span class="text-primary">#@pedido.NumeroPedido</span>
                            </h5>
                            <small class="text-muted">@pedido.ClienteNombre</small>
                        </div>
                        <div class="text-end">
                            @switch (pedido.Estado)
                                    {
                                        case EstadoPedido.Pendiente:
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                            break;
                                        case EstadoPedido.Confirmado:
                                            <span class="badge bg-info">
                                                <i class="fas fa-check-circle"></i> Confirmado
                                            </span>
                                            break;
                                        case EstadoPedido.EnPreparacion:
                                            <span class="badge bg-primary">
                                                <i class="fas fa-utensils"></i> En Preparación
                                            </span>
                                            break;
                                        case EstadoPedido.Listo:
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-double"></i> Listo
                                            </span>
                                            break;
                                        case EstadoPedido.Entregado:
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-box-check"></i> Entregado
                                            </span>
                                            break;
                                        case EstadoPedido.Cancelado:
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Cancelado
                                            </span>
                                            break;
                                    }
                                </div>
                            </div>

                            <!-- Info rápida -->
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted d-block">Fecha</small>
                                    <small>
                                        @pedido.FechaPedido.ToString("dd/MM/yyyy")<br>
                                        <span class="text-muted">@pedido.FechaPedido.ToString("HH:mm")</span>
                                    </small>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted d-block">Total</small>
                                    <strong class="h6 mb-0">S/. @pedido.Total.ToString("0.00")</strong>
                                </div>
                            </div>

                            <!-- Badges de información -->
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @if (pedido.TipoPedido == TipoPedido.ParaComerAqui)
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-store"></i> Comer Aquí
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-shopping-bag"></i> Para Llevar
                                    </span>
                                }

                                @if (pedido.EstadoPago == EstadoPago.Pagado)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Pagado
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock"></i> Pago Pendiente
                                    </span>
                                }

                                <span class="badge bg-light text-dark">
                                    @(pedido.MetodoPago == MetodoPago.PagoOnline ? "Pago Online" : "Pago en Mostrador")
                                </span>

                                <span class="badge bg-dark">
                                    @pedido.Items.Count items
                                </span>
                            </div>

                            <!-- Acciones -->
                            <div class="d-flex flex-wrap gap-2">
                                <a href="/admin/detalle-pedido/@pedido.Id"
                                   class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>

                                @if (pedido.MetodoPago == MetodoPago.PagoEnMostrador &&
                                                        pedido.EstadoPago == EstadoPago.Pendiente)
                                {
                                    <form method="post" action="/admin/pedidos/marcar-pagado/@pedido.Id" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success w-100">
                                            <i class="fas fa-dollar-sign me-1"></i>Pagado
                                        </button>
                                    </form>
                                }

                                @if ((pedido.Estado == EstadoPedido.Pendiente || pedido.Estado == EstadoPedido.Confirmado) &&
                                                        pedido.EstadoPago == EstadoPago.Pagado)
                                {
                                    <form method="post" action="/admin/pedidos/en-preparacion/@pedido.Id" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-info w-100">
                                            <i class="fas fa-fire me-1"></i>Preparar
                                        </button>
                                    </form>
                                }

                                @if (pedido.Estado == EstadoPedido.EnPreparacion)
                                {
                                    <form method="post" action="/admin/pedidos/listo/@pedido.Id" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success w-100">
                                            <i class="fas fa-check me-1"></i>Listo
                                        </button>
                                    </form>
                                }

                                @if (pedido.Estado == EstadoPedido.Listo)
                                {
                                    <form method="post" action="/admin/pedidos/entregado/@pedido.Id" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-secondary w-100">
                                            <i class="fas fa-box-check me-1"></i>Entregar
                                        </button>
                                    </form>
                                }

                                @if (pedido.Estado != EstadoPedido.Entregado && pedido.Estado != EstadoPedido.Cancelado)
                                {
                                    <form method="post" action="/admin/pedidos/cancelar/@pedido.Id" class="flex-fill">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger w-100"
                                                onclick="return confirm('¿Estás seguro de cancelar este pedido?')">
                                            <i class="fas fa-ban me-1"></i>Cancelar
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-3">
                <p class="text-muted small">
                    <i class="fas fa-info-circle me-1"></i>
                    Mostrando @Model.Count pedido(s)
                    @if (!string.IsNullOrEmpty(estadoActual))
                    {
                        <span>con estado: <strong>@estadoActual</strong></span>
                    }
                    @if (!string.IsNullOrEmpty(buscar))
                    {
                        <span>que coinciden con: <strong>"@buscar"</strong></span>
                    }
                </p>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay pedidos</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(buscar) || !string.IsNullOrEmpty(estadoActual))
                    {
                        <span>No se encontraron pedidos con los criterios seleccionados.</span>
                        <br>
                        <a href="/admin/pedidos" class="btn btn-primary mt-3">
                            <i class="fas fa-list me-1"></i>Ver todos los pedidos
                        </a>
                    }
                    else
                    {
                        <span>Aún no hay pedidos en el sistema.</span>
                    }
                </p>
            </div>
        }
    </div>
</div>



@section Scripts {
    <script>
        // Auto-ocultar alertas después de 5 segundos
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}