@model Bebida
@{
    ViewData["Title"] = "Editar Bebida";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title mb-0">
            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <!-- Mostrar errores -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Errores de validación:</h5>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post" asp-action="EditarBebida" asp-route-id="@Model.Id" id="formBebida" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre de la Bebida *</label>
                        <input asp-for="Nombre" class="form-control">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Mililitros" class="form-label">Mililitros (Tamaño Mediano) *</label>
                        <input asp-for="Mililitros" type="number" class="form-control">
                        <span asp-validation-for="Mililitros" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Campo de carga de imagen -->
            <div class="mb-3">
                <label class="form-label">Imagen de la Bebida</label>

                <!-- Vista previa de la imagen -->
                <div class="mb-3">
                    <img id="imagenPreview"
                         src="@Model.ImagenUrl"
                         alt="Vista previa"
                         class="img-thumbnail"
                         style="max-width: 300px; max-height: 300px; object-fit: cover;">
                </div>

                <!-- Selector de archivo -->
                <div class="input-group mb-2">
                    <input type="file"
                           class="form-control"
                           id="imagen"
                           name="imagen"
                           accept="image/jpeg,image/jpg,image/png,image/webp"
                           data-optional="true">
                    <button class="btn btn-outline-secondary" type="button" id="btnLimpiarImagen">
                        <i class="fas fa-times"></i> Limpiar
                    </button>
                </div>
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i>
                    Deja vacío para mantener la imagen actual. Formatos: JPG, PNG, WEBP (5MB máx.)
                </small>

                <!-- Campo oculto para URL manual (opcional) -->
                <div class="mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="usarUrlManual">
                        <label class="form-check-label" for="usarUrlManual">
                            Usar URL manual en lugar de cargar archivo
                        </label>
                    </div>
                    <input asp-for="ImagenUrl"
                           class="form-control mt-2"
                           id="imagenUrlInput"
                           style="display: none;">
                </div>
            </div>

            <hr class="my-4">

            <!-- Precios por tamaño -->
            <div class="mb-4">
                <label class="form-label fw-bold">
                    <i class="fas fa-tags me-2"></i>Precios por Tamaño
                </label>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-circle text-secondary"></i> Pequeño
                                </h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/</span>
                                    <input asp-for="PrecioPequeno"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           required>
                                </div>
                                <span asp-validation-for="PrecioPequeno" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-primary">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-circle text-primary"></i> Mediano
                                    <small class="text-muted">(Base)</small>
                                </h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/</span>
                                    <input asp-for="PrecioMediano"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           required>
                                </div>
                                <span asp-validation-for="PrecioMediano" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-success">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-circle text-success"></i> Grande
                                </h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/</span>
                                    <input asp-for="PrecioGrande"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           required>
                                </div>
                                <span asp-validation-for="PrecioGrande" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tipo de bebida -->
            <div class="mb-4">
                <label class="form-label fw-bold">Tipo de Bebida</label>
                <div class="form-check form-switch">
                    <input asp-for="EsAlcoholica"
                           class="form-check-input"
                           type="checkbox"
                           id="esAlcoholica">
                    <label class="form-check-label" for="esAlcoholica">
                        <i class="fas fa-wine-bottle me-2"></i>
                        ¿Es bebida alcohólica? (+18)
                    </label>
                </div>
            </div>

            <hr class="my-4">

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Guardar Cambios
                </button>
                <a href="/admin/bebidas" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputImagen = document.getElementById('imagen');
            const imagenPreview = document.getElementById('imagenPreview');
            const btnLimpiarImagen = document.getElementById('btnLimpiarImagen');
            const checkboxUrlManual = document.getElementById('usarUrlManual');
            const imagenUrlInput = document.getElementById('imagenUrlInput');
            const imagenOriginal = '@Model.ImagenUrl';

            // Vista previa de imagen
            inputImagen.addEventListener('change', function(e) {
                const archivo = e.target.files[0];
                if (archivo) {
                    if (archivo.size > 5 * 1024 * 1024) {
                        alert('La imagen es demasiado grande. El tamaño máximo es 5MB.');
                        inputImagen.value = '';
                        return;
                    }

                    const tiposPermitidos = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
                    if (!tiposPermitidos.includes(archivo.type)) {
                        alert('Formato no permitido. Solo se aceptan JPG, PNG o WEBP.');
                        inputImagen.value = '';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        imagenPreview.src = e.target.result;
                    };
                    reader.readAsDataURL(archivo);
                }
            });

            btnLimpiarImagen.addEventListener('click', function() {
                inputImagen.value = '';
                imagenPreview.src = imagenOriginal;
            });

            checkboxUrlManual.addEventListener('change', function() {
                if (this.checked) {
                    inputImagen.disabled = true;
                    btnLimpiarImagen.disabled = true;
                    imagenUrlInput.style.display = 'block';
                } else {
                    inputImagen.disabled = false;
                    btnLimpiarImagen.disabled = false;
                    imagenUrlInput.style.display = 'none';
                }
            });

            imagenUrlInput.addEventListener('input', function() {
                if (this.value) {
                    imagenPreview.src = this.value;
                    imagenPreview.onerror = function() {
                        this.src = imagenOriginal;
                    };
                }
            });

            // Validación de precios
            const precioPequeno = document.getElementById('PrecioPequeno');
            const precioMediano = document.getElementById('PrecioMediano');
            const precioGrande = document.getElementById('PrecioGrande');

            document.getElementById('formBebida').addEventListener('submit', function(e) {
                const pequeno = parseFloat(precioPequeno.value) || 0;
                const mediano = parseFloat(precioMediano.value) || 0;
                const grande = parseFloat(precioGrande.value) || 0;

                if (pequeno <= 0 || mediano <= 0 || grande <= 0) {
                    e.preventDefault();
                    alert('Todos los precios deben ser mayores a 0');
                    return false;
                }

                if (pequeno >= mediano || mediano >= grande) {
                    e.preventDefault();
                    alert('Los precios deben seguir el orden: Pequeño < Mediano < Grande');
                    return false;
                }
            });
        });
    </script>
}