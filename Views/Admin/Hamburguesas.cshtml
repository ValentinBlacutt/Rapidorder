<!-- Views/Admin/Hamburguesas.cshtml -->
@model List<Hamburguesa>
@{
    ViewData["Title"] = "Gestión de Hamburguesas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4 h-md-2 mb-0">
        <i class="fas fa-hamburger me-2"></i>
        <span class="d-none d-md-inline">@ViewData["Title"]</span>
        <span class="d-inline d-md-none">Hamburguesas</span>
    </h2>
    <a asp-controller="Admin" asp-action="CrearHamburguesa" class="btn btn-primary btn-sm btn-md-normal">
        <i class="fas fa-plus me-1"></i>
        <span class="d-none d-sm-inline">Nueva</span>
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body p-2 p-md-3">
        @if (Model.Any())
        {
            <!-- Vista de tabla para desktop -->
            <div class="table-responsive d-none d-lg-block">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Ingredientes</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hamburguesa in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(hamburguesa.ImagenUrl))
                                    {
                                        <img src="@hamburguesa.ImagenUrl"
                                             alt="@hamburguesa.Nombre"
                                             class="img-thumbnail"
                                             style="max-width: 60px; max-height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px;">
                                            <i class="fas fa-hamburger text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@hamburguesa.Nombre</strong>
                                </td>
                                <td>
                                    <small>@hamburguesa.Descripcion</small>
                                </td>
                                <td>
                                    <strong class="text-success">S/. @hamburguesa.Precio.ToString("0.00")</strong>
                                </td>
                                <td>
                                    @if (hamburguesa.Ingredientes != null && hamburguesa.Ingredientes.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var ingrediente in hamburguesa.Ingredientes.Take(3))
                                            {
                                                <span class="badge @(ingrediente.esObligatorio ? "bg-danger" : ingrediente.EsExtra ? "bg-warning text-dark" : "bg-secondary")">
                                                    @ingrediente.Ingrediente.Nombre
                                                    @if (ingrediente.esObligatorio)
                                                    {
                                                        <i class="fas fa-lock ms-1" style="font-size: 0.7em;"></i>
                                                    }
                                                    @if (ingrediente.EsExtra)
                                                    {
                                                        <i class="fas fa-plus ms-1" style="font-size: 0.7em;"></i>
                                                    }
                                                </span>
                                            }
                                            @if (hamburguesa.Ingredientes.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">
                                                    +@(hamburguesa.Ingredientes.Count - 3) más
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin ingredientes</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Admin"
                                           asp-action="EditarHamburguesa"
                                           asp-route-id="@hamburguesa.Id"
                                           class="btn btn-outline-primary"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post"
                                              asp-controller="Admin"
                                              asp-action="EliminarHamburguesa"
                                              asp-route-id="@hamburguesa.Id"
                                              class="d-inline"
                                              onsubmit="return confirm('¿Estás seguro de eliminar esta hamburguesa?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Vista de cards para móvil/tablet -->
            <div class="d-lg-none">
                @foreach (var hamburguesa in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body p-3">
                            <div class="row g-2">
                                <!-- Imagen -->
                                <div class="col-4 col-sm-3">
                                    @if (!string.IsNullOrEmpty(hamburguesa.ImagenUrl))
                                    {
                                        <img src="@hamburguesa.ImagenUrl"
                                             alt="@hamburguesa.Nombre"
                                             class="img-fluid rounded"
                                             style="width: 100%; height: 100px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 100%; height: 100px;">
                                            <i class="fas fa-hamburger fa-2x text-muted"></i>
                                        </div>
                                    }
                                </div>

                                <!-- Información -->
                                <div class="col-8 col-sm-9">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="mb-0 me-2">@hamburguesa.Nombre</h5>
                                        <strong class="text-success text-nowrap">S/. @hamburguesa.Precio.ToString("0.00")</strong>
                                    </div>

                                    <p class="text-muted small mb-2 d-none d-sm-block">
                                        @hamburguesa.Descripcion
                                    </p>

                                    <!-- Ingredientes -->
                                    @if (hamburguesa.Ingredientes != null && hamburguesa.Ingredientes.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1 mb-2">
                                            @foreach (var ingrediente in hamburguesa.Ingredientes.Take(2))
                                            {
                                                <span class="badge @(ingrediente.esObligatorio ? "bg-danger" : ingrediente.EsExtra ? "bg-warning text-dark" : "bg-secondary")" style="font-size: 0.7rem;">
                                                    @ingrediente.Ingrediente.Nombre
                                                </span>
                                            }
                                            @if (hamburguesa.Ingredientes.Count > 2)
                                            {
                                                <span class="badge bg-light text-dark" style="font-size: 0.7rem;">
                                                    +@(hamburguesa.Ingredientes.Count - 2)
                                                </span>
                                            }
                                        </div>
                                    }

                                    <!-- Acciones -->
                                    <div class="d-flex gap-2 mt-2">
                                        <a asp-controller="Admin"
                                           asp-action="EditarHamburguesa"
                                           asp-route-id="@hamburguesa.Id"
                                           class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="fas fa-edit me-1"></i>Editar
                                        </a>
                                        <form method="post"
                                              asp-controller="Admin"
                                              asp-action="EliminarHamburguesa"
                                              asp-route-id="@hamburguesa.Id"
                                              class="flex-fill"
                                              onsubmit="return confirm('¿Estás seguro de eliminar esta hamburguesa?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                <i class="fas fa-trash me-1"></i>Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-hamburger fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay hamburguesas</h4>
                <p class="text-muted">Comienza creando tu primera hamburguesa.</p>
                <a asp-controller="Admin" asp-action="CrearHamburguesa" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Nueva Hamburguesa
                </a>
            </div>
        }
    </div>
</div>

<style>
    .table td {
        vertical-align: middle;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    /* Ajustes para móvil */
    @@media (max-width: 767.98px) {
        .card-body

    {
        padding: 0.75rem;
    }

    h2.h4 {
        font-size: 1.1rem;
    }

    }

    /* Ajustes para tablet */
    @@media (min-width: 768px) and (max-width: 991.98px) {
        .card-body

    {
        padding: 1rem;
    }

    }
</style>