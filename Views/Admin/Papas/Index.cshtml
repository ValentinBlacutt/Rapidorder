@model List<Restaurante.Models.Papas>
@{
    ViewData["Title"] = "Gestión de Papas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/PapasAdmin.css" />

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0 h5 h-md-4">
            <i class="fas fa-seedling me-2"></i>
            <span class="d-none d-md-inline">@ViewData["Title"]</span>
            <span class="d-inline d-md-none">Papas</span>
        </h4>
        <a href="/admin/papas/crear" class="btn btn-success btn-sm btn-md-normal">
            <i class="fas fa-plus me-1"></i>
            <span class="d-none d-sm-inline">Nuevas</span>
        </a>
    </div>
    <div class="card-body p-2 p-md-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <!-- Vista de tabla para desktop -->
            <div class="table-responsive d-none d-lg-block">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Salsa</th>
                            <th>Precios</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var papa in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(papa.ImagenUrl))
                                        {
                                            <img src="@papa.ImagenUrl"
                                                 alt="@papa.Nombre"
                                                 class="img-thumbnail me-3"
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 onerror="this.src='/images/placeholder-food.jpg'">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                                                 style="width: 60px; height: 60px;">
                                                <i class="fas fa-seedling text-muted"></i>
                                            </div>
                                        }
                                        <strong>@papa.Nombre</strong>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">@papa.Descripcion</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@papa.TipoSalsa</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <small>
                                            <span class="badge bg-secondary">Pequeño</span>
                                            S/ @papa.PrecioPequeno.ToString("0.00")
                                        </small>
                                        <small>
                                            <span class="badge bg-primary">Mediano</span>
                                            S/ @papa.PrecioMediano.ToString("0.00")
                                        </small>
                                        <small>
                                            <span class="badge bg-success">Grande</span>
                                            S/ @papa.PrecioGrande.ToString("0.00")
                                        </small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/admin/papas/editar/@papa.Id"
                                           class="btn btn-outline-primary"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-danger"
                                                onclick="confirmarEliminar(@papa.Id, '@papa.Nombre.Replace("'", "\\'")')"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Vista de cards para móvil/tablet -->
            <div class="d-lg-none">
                @foreach (var papa in Model)
                {
                    <div class="card mb-3 shadow-sm border-0">
                        <div class="card-body p-3">
                            <!-- Header con imagen y nombre -->
                            <div class="d-flex align-items-start mb-3">
                                @if (!string.IsNullOrEmpty(papa.ImagenUrl))
                                {
                                    <img src="@papa.ImagenUrl"
                                         alt="@papa.Nombre"
                                         class="img-thumbnail me-3 flex-shrink-0"
                                         style="width: 80px; height: 80px; object-fit: cover;"
                                         onerror="this.src='/images/placeholder-food.jpg'">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center me-3 flex-shrink-0"
                                         style="width: 80px; height: 80px;">
                                        <i class="fas fa-seedling text-muted fa-2x"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h5 class="mb-1">@papa.Nombre</h5>
                                        <span class="badge bg-info">
                                            @papa.TipoSalsa
                                        </span>
                                    </div>
                                    <p class="text-muted small mb-0">
                                        @papa.Descripcion
                                    </p>
                                </div>
                            </div>

                            <!-- Precios -->
                            <div class="mb-3">
                                <div class="row g-2 text-center">
                                    <div class="col-4">
                                        <div class="border rounded p-2 bg-light">
                                            <div class="text-muted small">
                                                <i class="fas fa-circle" style="font-size: 0.5em;"></i>
                                                <span class="d-none d-sm-inline">Pequeño</span>
                                                <span class="d-inline d-sm-none">P</span>
                                            </div>
                                            <strong class="text-success d-block">
                                                S/ @papa.PrecioPequeno.ToString("0.00")
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="border rounded p-2 bg-light">
                                            <div class="text-muted small">
                                                <i class="fas fa-circle" style="font-size: 0.7em;"></i>
                                                <span class="d-none d-sm-inline">Mediano</span>
                                                <span class="d-inline d-sm-none">M</span>
                                            </div>
                                            <strong class="text-success d-block">
                                                S/ @papa.PrecioMediano.ToString("0.00")
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="border rounded p-2 bg-light">
                                            <div class="text-muted small">
                                                <i class="fas fa-circle"></i>
                                                <span class="d-none d-sm-inline">Grande</span>
                                                <span class="d-inline d-sm-none">G</span>
                                            </div>
                                            <strong class="text-success d-block">
                                                S/ @papa.PrecioGrande.ToString("0.00")
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Acciones -->
                            <div class="d-flex gap-2">
                                <a href="/admin/papas/editar/@papa.Id"
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-edit me-1"></i>
                                    <span class="d-none d-sm-inline">Editar</span>
                                </a>
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm flex-fill"
                                        onclick="confirmarEliminar(@papa.Id, '@papa.Nombre.Replace("'", "\\'")')">
                                    <i class="fas fa-trash me-1"></i>
                                    <span class="d-none d-sm-inline">Eliminar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-seedling fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No hay papas registradas</h5>
                <p class="text-muted mb-4">Comienza creando tus primeras papas fritas.</p>
                <a href="/admin/papas/crear" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Crear Papas
                </a>
            </div>
        }
    </div>
</div>

<!-- Formulario oculto para eliminar -->
<form id="formEliminar" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>


@section Scripts {
    <script>
        function confirmarEliminar(id, nombre) {
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    title: '¿Eliminar Papas?',
                    html: `¿Estás seguro de eliminar <strong>"${nombre}"</strong>?<br><br>
                          <span class="text-danger">Esta acción no se puede deshacer.</span>`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true,
                    backdrop: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = document.getElementById('formEliminar');
                        form.action = `/admin/papas/eliminar/${id}`;
                        form.submit();
                    }
                });
            } else {
                if (confirm(`¿Estás seguro de eliminar las papas "${nombre}"?\n\nEsta acción no se puede deshacer.`)) {
                    const form = document.getElementById('formEliminar');
                    form.action = `/admin/papas/eliminar/${id}`;
                    form.submit();
                }
            }
        }

        // Tooltips para botones de acción
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}