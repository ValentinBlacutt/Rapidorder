<!-- Views/Admin/Papas/Editar.cshtml -->
@model Papas
@{
    ViewData["Title"] = "Editar Papas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/AltaPapas.css" />
<div class="mb-4">
    <a href="/admin/papas" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver a Papas
    </a>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">
            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
        </h3>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" action="/admin/papas/editar/@Model.Id">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Disponible" />
            <input type="hidden" asp-for="Categoria" />
            <input type="hidden" asp-for="Tamanio" />

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Información Básica -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">
                            <i class="fas fa-seedling me-1"></i>Nombre *
                        </label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Papas Fritas Clásicas" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Descripción *
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe las papas..." required></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TipoSalsa" class="form-label">
                            <i class="fas fa-bottle-droplet me-1"></i>Tipo de Salsa *
                        </label>
                        <select asp-for="TipoSalsa" class="form-select" required>
                            <option value="">Selecciona una salsa</option>
                            <option value="Kétchup">Kétchup</option>
                            <option value="Mostaza">Mostaza</option>
                            <option value="Mayonesa">Mayonesa</option>
                            <option value="Queso cheddar">Queso Cheddar</option>
                            <option value="BBQ">BBQ</option>
                            <option value="Ranch">Ranch</option>
                            <option value="Ají">Ají</option>
                            <option value="Sin salsa">Sin Salsa</option>
                        </select>
                        <span asp-validation-for="TipoSalsa" class="text-danger"></span>
                    </div>
                </div>

                <!-- Imagen -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-image me-1"></i>Imagen Actual
                        </label>
                        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded" style="max-height: 200px;" />
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Sin imagen
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label for="imagen" class="form-label">
                            <i class="fas fa-upload me-1"></i>Cambiar Imagen
                        </label>
                        <input type="file" name="imagen" id="imagen" class="form-control" accept="image/jpeg,image/png,image/webp" />
                        <small class="text-muted">Formatos: JPG, PNG, WEBP. Deja vacío para mantener la actual.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImagenUrl" class="form-label">
                            <i class="fas fa-link me-1"></i>O URL de Imagen
                        </label>
                        <input asp-for="ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
                        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                        <small class="text-muted">URL externa de la imagen (opcional)</small>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <!-- Precios por Tamaño -->
            <div class="mb-4">
                <h5 class="mb-3">
                    <i class="fas fa-dollar-sign me-2"></i>Precios por Tamaño
                </h5>
                <p class="text-muted">Define los precios para cada tamaño. El precio debe aumentar: Pequeño &lt; Mediano &lt; Grande</p>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card border-secondary h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-circle mb-2" style="font-size: 1.5em;"></i>
                                <h6 class="card-title">Tamaño Pequeño</h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="PrecioPequeno"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           placeholder="0.00"
                                           required />
                                </div>
                                <span asp-validation-for="PrecioPequeno" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-primary h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-circle mb-2" style="font-size: 2em;"></i>
                                <h6 class="card-title">Tamaño Mediano</h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="PrecioMediano"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           placeholder="0.00"
                                           required />
                                </div>
                                <span asp-validation-for="PrecioMediano" class="text-danger small"></span>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-star"></i> Precio base
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-success h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-circle mb-2" style="font-size: 2.5em;"></i>
                                <h6 class="card-title">Tamaño Grande</h6>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="PrecioGrande"
                                           type="number"
                                           step="0.01"
                                           class="form-control"
                                           placeholder="0.00"
                                           required />
                                </div>
                                <span asp-validation-for="PrecioGrande" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <!-- Botones -->
            <div class="d-flex justify-content-between align-items-center">
                <a href="/admin/papas" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-1"></i>Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}