@model Restaurante.Models.Pedido
@{
    ViewData["Title"] = $"Pedido #{Model.NumeroPedido}";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/DetallePedido.css" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-file-invoice me-2"></i>
        Pedido #@Model.NumeroPedido
    </h2>
    <a href="/admin/pedidos" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver a Pedidos
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Información del Pedido -->
        <div class="card pedido-detalle-card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Información del Pedido
                </h5>
            </div>
            <div class="card-body">
                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-hashtag me-2"></i>Número:
                    </span>
                    <strong class="text-primary">#@Model.NumeroPedido</strong>
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-user me-2"></i>Cliente:
                    </span>
                    <span>@Model.ClienteNombre</span>
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-calendar me-2"></i>Fecha:
                    </span>
                    <span>@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</span>
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-utensils me-2"></i>Tipo de Pedido:
                    </span>
                    @if (Model.TipoPedido == TipoPedido.ParaComerAqui)
                    {
                        <span class="badge bg-info">Para Comer Aquí</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Para Llevar</span>
                    }
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-credit-card me-2"></i>Método de Pago:
                    </span>
                    @if (Model.MetodoPago == MetodoPago.PagoOnline)
                    {
                        <span class="badge bg-primary">Pago Online</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pago en Mostrador</span>
                    }
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-money-bill me-2"></i>Estado del Pago:
                    </span>
                    @if (Model.EstadoPago == EstadoPago.Pagado)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check"></i> Pagado
                        </span>
                        @if (Model.FechaPago.HasValue)
                        {
                            <small class="text-muted ms-2">
                                (@Model.FechaPago.Value.ToString("dd/MM/yyyy HH:mm"))
                            </small>
                        }
                    }
                    else
                    {
                        <span class="badge bg-warning">
                            <i class="fas fa-clock"></i> Pendiente de Pago
                        </span>
                    }
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-tasks me-2"></i>Estado del Pedido:
                    </span>
                    @switch (Model.Estado)
                    {
                        case EstadoPedido.Pendiente:
                            <span class="badge bg-warning">Pendiente</span>
                            break;
                        case EstadoPedido.Confirmado:
                            <span class="badge bg-info">Confirmado</span>
                            break;
                        case EstadoPedido.EnPreparacion:
                            <span class="badge bg-primary">En Preparación</span>
                            break;
                        case EstadoPedido.Listo:
                            <span class="badge bg-success">Listo</span>
                            break;
                        case EstadoPedido.Entregado:
                            <span class="badge bg-secondary">Entregado</span>
                            break;
                        case EstadoPedido.Cancelado:
                            <span class="badge bg-danger">Cancelado</span>
                            break;
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.Notas))
                {
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-sticky-note me-2"></i>Notas:
                        </span>
                        <br>
                        <div class="alert alert-info mt-2 mb-0">
                            @Model.Notas
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Items del Pedido -->
        <div class="card pedido-detalle-card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>
                    Productos del Pedido (@Model.Items.Count items)
                </h5>
            </div>
            <div class="card-body p-0">
                @foreach (var item in Model.Items)
                {
                    <div class="item-pedido-row">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@item.NombreProducto</h6>
                                @if (!string.IsNullOrEmpty(item.Descripcion))
                                {
                                    <p class="text-muted small mb-1">@item.Descripcion</p>
                                }
                                @if (!string.IsNullOrEmpty(item.Notas))
                                {
                                    <p class="text-info small mb-0">
                                        <i class="fas fa-info-circle"></i> @item.Notas
                                    </p>
                                }
                                <div class="mt-2">
                                    <span class="badge bg-secondary">Cantidad: @item.Cantidad</span>
                                    <span class="badge bg-primary">Precio Unit: S/. @item.PrecioUnitario.ToString("0.00")</span>
                                </div>
                            </div>
                            <div class="text-end">
                                <h5 class="mb-0 text-success">
                                    S/. @item.Subtotal.ToString("0.00")
                                </h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Totales -->
        <div class="card pedido-detalle-card mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calculator me-2"></i>
                    Resumen de Pago
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <strong>S/. @Model.Subtotal.ToString("0.00")</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Impuestos (18%):</span>
                    <strong>S/. @Model.Impuestos.ToString("0.00")</strong>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5>Total:</h5>
                    <h5 class="text-primary">S/. @Model.Total.ToString("0.00")</h5>
                </div>
            </div>
        </div>

        <!-- Acciones del Pedido -->
        @if (Model.Estado != EstadoPedido.Entregado && Model.Estado != EstadoPedido.Cancelado)
        {
            <div class="card pedido-detalle-card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Acciones del Pedido
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Marcar como Pagado -->
                    @if (Model.MetodoPago == MetodoPago.PagoEnMostrador && Model.EstadoPago == EstadoPago.Pendiente)
                    {
                        <button type="button"
                                class="btn btn-success w-100 mb-2 btn-action"
                                onclick="confirmarAccion('marcar-pagado', '@Model.Id', '¿Confirmar que el cliente pagó en mostrador?', 'El pedido será marcado como pagado y confirmado.')">
                            <i class="fas fa-dollar-sign me-2"></i>Marcar como Pagado
                        </button>
                    }

                    <!-- Confirmar Pedido -->
                    @if (Model.Estado == EstadoPedido.Pendiente && Model.EstadoPago == EstadoPago.Pagado)
                    {
                        <button type="button"
                                class="btn btn-info w-100 mb-2 btn-action"
                                onclick="confirmarCambioEstado('@Model.Id', 'Confirmado', '¿Confirmar este pedido?', 'El pedido pasará a estado Confirmado.')">
                            <i class="fas fa-check-circle me-2"></i>Confirmar Pedido
                        </button>
                    }

                    <!-- Iniciar Preparación -->
                    @if ((Model.Estado == EstadoPedido.Pendiente || Model.Estado == EstadoPedido.Confirmado) && Model.EstadoPago == EstadoPago.Pagado)
                    {
                        <button type="button"
                                class="btn btn-primary w-100 mb-2 btn-action"
                                onclick="confirmarCambioEstado('@Model.Id', 'EnPreparacion', '¿Iniciar preparación de este pedido?', 'El pedido pasará a la cocina.')">
                            <i class="fas fa-fire me-2"></i>Iniciar Preparación
                        </button>
                    }

                    <!-- Marcar como Listo -->
                    @if (Model.Estado == EstadoPedido.EnPreparacion)
                    {
                        <button type="button"
                                class="btn btn-success w-100 mb-2 btn-action"
                                onclick="confirmarCambioEstado('@Model.Id', 'Listo', '¿Marcar pedido como listo?', 'El pedido estará listo para entregar al cliente.')">
                            <i class="fas fa-check me-2"></i>Marcar como Listo
                        </button>
                    }

                    <!-- Marcar como Entregado -->
                    @if (Model.Estado == EstadoPedido.Listo)
                    {
                        <button type="button"
                                class="btn btn-secondary w-100 mb-2 btn-action"
                                onclick="confirmarCambioEstado('@Model.Id', 'Entregado', '¿Marcar como entregado?', 'El pedido se cerrará como completado.')">
                            <i class="fas fa-box-check me-2"></i>Marcar como Entregado
                        </button>
                    }

                    <!-- Cancelar Pedido -->
                    <button type="button"
                            class="btn btn-danger w-100 btn-action"
                            onclick="confirmarCambioEstado('@Model.Id', 'Cancelado', '¿Cancelar este pedido?', 'Esta acción no se puede deshacer.')">
                        <i class="fas fa-ban me-2"></i>Cancelar Pedido
                    </button>

                    @if (Model.Estado != EstadoPedido.EnPreparacion && Model.EstadoPago != EstadoPago.Pagado)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <small>
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                <strong>Nota:</strong> El pedido debe estar pagado antes de prepararlo.
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="card pedido-detalle-card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Estado Final
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        @if (Model.Estado == EstadoPedido.Entregado)
                        {
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5>Pedido Entregado</h5>
                            <p class="text-muted mb-0">Este pedido ha sido completado exitosamente.</p>
                        }
                        else
                        {
                            <i class="fas fa-times-circle fa-3x text-danger mb-3"></i>
                            <h5>Pedido Cancelado</h5>
                            <p class="text-muted mb-0">Este pedido fue cancelado.</p>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Otras Acciones -->
        <div class="card pedido-detalle-card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>
                    Otras Acciones
                </h5>
            </div>
            <div class="card-body">
                <button onclick="window.print()" class="btn btn-outline-primary w-100">
                    <i class="fas fa-print me-2"></i>Imprimir Pedido
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="modalConfirmacion" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo">Confirmar Acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="modalMensaje"></p>
                <p class="text-muted small" id="modalDescripcion"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="btnConfirmar">
                    <i class="fas fa-check me-1"></i>Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Formulario oculto para enviar acciones -->
<form id="formAccion" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Auto-ocultar alertas después de 5 segundos
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        let modalConfirmacion = new bootstrap.Modal(document.getElementById('modalConfirmacion'));

        // Función para cambiar estado del pedido
        function confirmarCambioEstado(pedidoId, nuevoEstado, titulo, descripcion) {
            document.getElementById('modalTitulo').textContent = titulo;
            document.getElementById('modalMensaje').textContent = titulo;
            document.getElementById('modalDescripcion').textContent = descripcion;

            document.getElementById('btnConfirmar').onclick = function() {
                const form = document.getElementById('formAccion');
                form.action = `/admin/pedidos/actualizar-estado/${pedidoId}`;

                // Crear input para el nuevo estado
                let inputEstado = document.createElement('input');
                inputEstado.type = 'hidden';
                inputEstado.name = 'nuevoEstado';
                inputEstado.value = nuevoEstado;
                form.appendChild(inputEstado);

                form.submit();
            };

            modalConfirmacion.show();
        }

        // Función para marcar como pagado
        function confirmarAccion(accion, pedidoId, titulo, descripcion) {
            document.getElementById('modalTitulo').textContent = titulo;
            document.getElementById('modalMensaje').textContent = titulo;
            document.getElementById('modalDescripcion').textContent = descripcion;

            document.getElementById('btnConfirmar').onclick = function() {
                const form = document.getElementById('formAccion');
                form.action = `/admin/pedidos/${accion}/${pedidoId}`;
                form.submit();
            };

            modalConfirmacion.show();
        }
    </script>
}