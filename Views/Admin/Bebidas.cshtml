@model List<Bebida>
@{
    ViewData["Title"] = "Gestión de Bebidas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0 h5 h-md-4">
            <i class="fas fa-glass-whiskey me-2"></i>
            <span class="d-none d-md-inline">@ViewData["Title"]</span>
            <span class="d-inline d-md-none">Bebidas</span>
        </h4>
        <a href="/admin/CrearBebida" class="btn btn-success btn-sm btn-md-normal">
            <i class="fas fa-plus me-1"></i>
            <span class="d-none d-sm-inline">Nueva</span>
        </a>
    </div>
    <div class="card-body p-2 p-md-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <!-- Vista de tabla para desktop -->
            <div class="table-responsive d-none d-lg-block">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precios</th>
                            <th>Mililitros</th>
                            <th>Tipo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bebida in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@bebida.ImagenUrl"
                                         alt="@bebida.Nombre"
                                         class="img-thumbnail"
                                         style="width: 60px; height: 60px; object-fit: cover;"
                                         onerror="this.src='/images/bebida-default.jpg'">
                                </td>
                                <td>
                                    <strong>@bebida.Nombre</strong>
                                </td>
                                <td>
                                    <small class="text-muted">@bebida.Descripcion</small>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <small>
                                            <span class="badge bg-secondary">Pequeño</span> S/ @bebida.PrecioPequeno.ToString("0.00")
                                        </small>
                                        <small>
                                            <span class="badge bg-primary">Mediano</span> S/ @bebida.PrecioMediano.ToString("0.00")
                                        </small>
                                        <small>
                                            <span class="badge bg-success">Grande</span> S/ @bebida.PrecioGrande.ToString("0.00")
                                        </small>
                                    </div>
                                </td>
                                <td>@bebida.Mililitros ml</td>
                                <td>
                                    @if (bebida.EsAlcoholica)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-wine-bottle"></i> Alcohólica
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-glass-water"></i> Sin Alcohol
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/admin/EditarBebida/@bebida.Id"
                                           class="btn btn-outline-primary"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-danger"
                                                onclick="confirmarEliminar(@bebida.Id, '@bebida.Nombre.Replace("'", "\\'")')"
                                                title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Vista de cards para móvil/tablet -->
            <div class="d-lg-none">
                @foreach (var bebida in Model)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body p-3">
                            <div class="row g-2">
                                <!-- Imagen -->
                                <div class="col-4 col-sm-3">
                                    <img src="@bebida.ImagenUrl"
                                         alt="@bebida.Nombre"
                                         class="img-fluid rounded"
                                         style="width: 100%; height: 100px; object-fit: cover;"
                                         onerror="this.src='/images/bebida-default.jpg'">
                                </div>

                                <!-- Información -->
                                <div class="col-8 col-sm-9">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="mb-0 me-2">@bebida.Nombre</h5>
                                        @if (bebida.EsAlcoholica)
                                        {
                                            <span class="badge bg-warning text-dark text-nowrap">
                                                <i class="fas fa-wine-bottle"></i>
                                                <span class="d-none d-sm-inline ms-1">Alcohólica</span>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-nowrap">
                                                <i class="fas fa-glass-water"></i>
                                                <span class="d-none d-sm-inline ms-1">Sin Alcohol</span>
                                            </span>
                                        }
                                    </div>

                                    <p class="text-muted small mb-2 d-none d-sm-block">
                                        @bebida.Descripcion
                                    </p>

                                    <!-- Precios -->
                                    <div class="mb-2">
                                        <div class="d-flex flex-wrap gap-2">
                                            <span class="badge bg-secondary" style="font-size: 0.75rem;">
                                                P: S/@bebida.PrecioPequeno.ToString("0.00")
                                            </span>
                                            <span class="badge bg-primary" style="font-size: 0.75rem;">
                                                M: S/@bebida.PrecioMediano.ToString("0.00")
                                            </span>
                                            <span class="badge bg-success" style="font-size: 0.75rem;">
                                                G: S/@bebida.PrecioGrande.ToString("0.00")
                                            </span>
                                            <span class="badge bg-light text-dark" style="font-size: 0.75rem;">
                                                @bebida.Mililitros ml
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Acciones -->
                                    <div class="d-flex gap-2 mt-2">
                                        <a href="/admin/EditarBebida/@bebida.Id"
                                           class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="fas fa-edit me-1"></i>Editar
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger flex-fill"
                                                onclick="confirmarEliminar(@bebida.Id, '@bebida.Nombre.Replace("'", "\\'")')">
                                            <i class="fas fa-trash me-1"></i>Eliminar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No hay bebidas registradas.
                <a href="/admin/CrearBebida" class="alert-link">Crear la primera bebida</a>
            </div>
        }
    </div>
</div>

<!-- Formulario oculto para eliminar -->
<form id="formEliminar" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

<style>
    /* Ajustes para móvil */
    @@media (max-width: 767.98px) {
        .card-body

    {
        padding: 0.75rem !important;
    }

    .card-header h4 {
        font-size: 1.1rem;
    }

    .card-header {
        padding: 0.75rem;
    }

    }

    /* Ajustes para tablet */
    @@media (min-width: 768px) and (max-width: 991.98px) {
        .card-body

    {
        padding: 1rem !important;
    }

    }

    /* Botón normal en desktop */
    @@media (min-width: 768px) {
        .btn-md-normal

    {
        padding: 0.375rem 0.75rem !important;
        font-size: 1rem !important;
    }

    }
</style>

@section Scripts {
    <script>
        function confirmarEliminar(id, nombre) {
            Swal.fire({
                title: '¿Estás seguro?',
                html: `Vas a eliminar la bebida: <strong>"${nombre}"</strong><br><br>
                      <span class="text-warning">Esta acción no se puede deshacer.</span>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Enviar formulario de eliminación
                    const form = document.getElementById('formEliminar');
                    form.action = `/admin/EliminarBebida/${id}`;
                    form.submit();

                    // Mostrar loading opcional
                    Swal.fire({
                        title: 'Eliminando...',
                        text: 'Por favor espere',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                }
            });
        }

        // Fallback si no hay SweetAlert2
        if (typeof Swal === 'undefined') {
            function confirmarEliminar(id, nombre) {
                if (confirm(`¿Estás seguro de eliminar la bebida "${nombre}"?\n\nEsta acción no se puede deshacer.`)) {
                    const form = document.getElementById('formEliminar');
                    form.action = `/admin/EliminarBebida/${id}`;
                    form.submit();
                }
            }
        }
    </script>
}