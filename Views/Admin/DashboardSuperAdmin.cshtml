@{
    ViewData["Title"] = "Dashboard SuperAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/DashBoardCocina.css" />

@functions {
    public string GetBadgeClass(EstadoPedido estado)
    {
        return estado switch
        {
            EstadoPedido.Pendiente => "bg-warning text-dark",
            EstadoPedido.Confirmado => "bg-info text-white",
            EstadoPedido.EnPreparacion => "bg-primary text-white",
            EstadoPedido.Listo => "bg-success text-white",
            EstadoPedido.Entregado => "bg-secondary text-white",
            EstadoPedido.Cancelado => "bg-danger text-white",
            _ => "bg-light text-dark"
        };
    }

    public string GetEstadoDisplayName(EstadoPedido estado)
    {
        return estado switch
        {
            EstadoPedido.Pendiente => "Pendiente",
            EstadoPedido.Confirmado => "Confirmado",
            EstadoPedido.EnPreparacion => "En Preparación",
            EstadoPedido.Listo => "Listo",
            EstadoPedido.Entregado => "Entregado",
            EstadoPedido.Cancelado => "Cancelado",
            _ => estado.ToString()
        };
    }
}

<div class="d-flex justify-content-between align-items-center mb-3 mb-md-4">
    <h2 class="mb-0">
        <i class="fas fa-tachometer-alt me-2"></i>
        <span class="d-none d-sm-inline">Dashboard SuperAdmin</span>
        <span class="d-inline d-sm-none">Dashboard</span>
    </h2>
</div>

<div class="row g-3 g-md-4">
    <!-- Estadísticas Rápidas -->
    <div class="col-6 col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">@ViewBag.TotalPedidosHoy</h4>
                        <p class="mb-0 small">Pedidos Hoy</p>
                    </div>
                    <div>
                        <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">S/. @ViewBag.IngresosHoy?.ToString("0.00")</h4>
                        <p class="mb-0 small">Ingresos Hoy</p>
                    </div>
                    <div>
                        <i class="fas fa-dollar-sign fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">@ViewBag.PedidosPendientes</h4>
                        <p class="mb-0 small">Pendientes</p>
                    </div>
                    <div>
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-6 col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">@ViewBag.TotalProductos</h4>
                        <p class="mb-0 small">Productos Activos</p>
                    </div>
                    <div>
                        <i class="fas fa-utensils fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3 mt-md-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list-alt me-2"></i>Pedidos Recientes
                </h5>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.PedidosRecientes != null && ((List<Pedido>)ViewBag.PedidosRecientes).Any())
                {
                    <!-- Vista de tabla para desktop -->
                    <div class="d-none d-lg-block">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-nowrap"># Pedido</th>
                                        <th class="text-nowrap">Cliente</th>
                                        <th class="text-nowrap">Total</th>
                                        <th class="text-nowrap">Estado</th>
                                        <th class="text-nowrap">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pedido in (List<Pedido>)ViewBag.PedidosRecientes)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <strong>@pedido.NumeroPedido</strong>
                                            </td>
                                            <td class="align-middle">
                                                @pedido.ClienteNombre
                                            </td>
                                            <td class="align-middle">
                                                <strong>S/. @pedido.Total.ToString("0.00")</strong>
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge @GetBadgeClass(pedido.Estado)">@pedido.Estado</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="/admin/pedidos" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                    <span class="ms-1">Ver</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Vista de cards para móvil/tablet -->
                    <div class="d-lg-none">
                        <div class="p-3">
                            @foreach (var pedido in (List<Pedido>)ViewBag.PedidosRecientes)
                            {
                                <div class="card mb-3 border shadow-sm">
                                    <div class="card-body">
                                        <!-- Header con número de pedido y estado -->
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h6 class="mb-1 text-primary">#@pedido.NumeroPedido</h6>
                                                <p class="mb-0 text-muted small">
                                                    <i class="fas fa-user me-1"></i>
                                                    @(pedido.ClienteNombre?.Length > 20 ? pedido.ClienteNombre.Substring(0, 20) + "..." : pedido.ClienteNombre)
                                                </p>
                                            </div>
                                            <span class="badge @GetBadgeClass(pedido.Estado)">
                                                @pedido.Estado
                                            </span>
                                        </div>

                                        <!-- Información del pedido -->
                                        <div class="row g-2 mb-3">
                                            <div class="col-6">
                                                <div class="text-center p-2 bg-light rounded">
                                                    <div class="text-muted small">Total</div>
                                                    <strong class="text-success">S/. @pedido.Total.ToString("0.00")</strong>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="text-center p-2 bg-light rounded">
                                                    <div class="text-muted small">Fecha</div>
                                                    <strong class="text-primary small">
                                                        @pedido.FechaPedido.ToString("HH:mm")
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Acciones -->
                                        <div class="d-flex gap-2">
                                            <a href="/admin/pedidos" class="btn btn-sm btn-primary flex-fill">
                                                <i class="fas fa-eye me-1"></i>
                                                Ver Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">No hay pedidos recientes</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

