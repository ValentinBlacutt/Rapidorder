<!-- Views/Shared/_LayoutAdmin.cshtml -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/LayoutAdmin.css" />
</head>
<body>
    <!-- Botón toggle para móvil -->
    <button class="mobile-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Overlay para cerrar sidebar en móvil -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 px-0 admin-sidebar" id="adminSidebar">
                <div class="p-3 text-center border-bottom">
                    <i class="fas fa-utensils fa-2x mb-2"></i>
                    <h5>Panel Admin</h5>
                    <small class="text-muted">@User.Identity.Name</small>
                </div>
                <nav class="nav flex-column mt-3">
                    <a href="/admin/dashboard" class="sidebar-item">
                        <i class="fas fa-tachometer-alt"></i>Dashboard
                    </a>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a href="/admin/hamburguesas" class="sidebar-item">
                            <i class="fas fa-hamburger"></i>Hamburguesas
                        </a>

                        <a href="/admin/bebidas" class="sidebar-item">
                            <i class="fas fa-glass-whiskey"></i>Bebidas
                        </a>

                        <a href="/admin/Papas" class="sidebar-item">
                            <i class="fas fa-seedling"></i>Papas Fritas
                        </a>

                        <a href="/admin/Combos" class="sidebar-item">
                            <i class="fas fa-box"></i>Combos
                        </a>
                    }
                    <a href="/admin/pedidos" class="sidebar-item">
                        <i class="fas fa-clipboard-list"></i>Pedidos
                    </a>
                    <div class="mt-4 pt-3 border-top">
                        <form asp-controller="AdminAuth" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="sidebar-item w-100 text-start border-0 bg-transparent">
                                <i class="fas fa-sign-out-alt"></i>Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 admin-content">
                <nav class="navbar navbar-light bg-white border-bottom">
                    <div class="container-fluid">
                        <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <i class="fas fa-user me-1"></i>
                                <span class="d-none d-sm-inline">@User.Identity.Name</span>
                            </span>
                            <span class="badge bg-primary">
                                @(User.IsInRole("SuperAdmin") ? "Super Admin" : "Cocina")
                            </span>
                        </div>
                    </div>
                </nav>
                <main class="p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para toggle del sidebar en móvil -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const toggleBtn = document.getElementById('sidebarToggle');
            const sidebarLinks = document.querySelectorAll('.sidebar-item');
            const logoutBtn = document.querySelector('.sidebar-item[type="submit"]');

            // Función para abrir sidebar
            function openSidebar() {
                sidebar.classList.add('show');
                overlay.classList.add('show');
                document.body.classList.add('sidebar-open');
                toggleBtn.innerHTML = '<i class="fas fa-times"></i>';
            }

            // Función para cerrar sidebar
            function closeSidebar() {
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
                document.body.classList.remove('sidebar-open');
                toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }

            // Toggle al hacer clic en el botón
            toggleBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();

                if (sidebar.classList.contains('show')) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            });

            // Cerrar al hacer clic en el overlay
            overlay.addEventListener('click', function(e) {
                e.preventDefault();
                closeSidebar();
            });

            // Cerrar al hacer clic en un link del sidebar (solo en móvil)
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth <= 767) {
                        setTimeout(closeSidebar, 200);
                    }
                });
            });

            // Cerrar sidebar al redimensionar a pantalla grande
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    if (window.innerWidth > 767) {
                        closeSidebar();
                    }
                }, 250);
            });

            // Prevenir cierre accidental al hacer clic dentro del sidebar
            sidebar.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>